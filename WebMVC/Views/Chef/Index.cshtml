@model IEnumerable<ObjetosDeNegocio.Cheffs>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" value="Agregar" onclick="location.href='@Url.Action("Create")'" class="btn btn-primary"><i class="fas fa-plus"></i>AGREGAR</button>
</p>
<table class="table" id="tablaDatos">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Especialidad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
                <!-- Button trigger modal -->
                @Html.ActionLink("","Borrar",new {id = item.ID }, new {@class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong"})
                <button type="button" >
                    Borrar
                </button>
            </td>
        </tr>
    }
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="href.location='@Html.Action("Delete")'">Borrar</button>
                </div>
            </div>
        </div>
    </div>
</table>